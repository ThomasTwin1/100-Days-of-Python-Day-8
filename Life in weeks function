def life_in_weeks():
    name = input("What is your name?\n")
    age = int(input("How old are you?\n"))  # Convert age to an integer
    weeks_in_a_year = 52
    user_age_in_weeks = age * weeks_in_a_year
    ninety_years_in_weeks = 90 * weeks_in_a_year
    weeks_until_90 = ninety_years_in_weeks - user_age_in_weeks

    print(f"Hello {name}!")
    print(f"You are currently {age} years old.")
    print(f"You have approximately {weeks_until_90} weeks left until you turn 90.")
life_in_weeks()
